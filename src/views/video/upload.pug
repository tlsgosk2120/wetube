extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(value="Upload Video", type="submit")
extends ../base

block content
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand

    div.video__data
        p.video__title=video.title
        small.video__owner Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name 
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
        br
        if String(video.owner._id) === String(loggedInUser._id) 
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10" placeholder="Write a nice comment...")
                button Send
    div.video__comments 
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment._id)
                    div.comment__userIcon
                        i.fas.fa-comment
                    div.comment__else
                        div
                            span=comment.owner.name
                            span.comment__createdAt
                                |   ·  #{new Date(comment.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})} &nbsp;
                            if String(comment.owner._id) === String(loggedInUser._id) 
                                span.fas.fa-ellipsis-v.comment__menu
                        if String(comment.owner._id) === String(loggedInUser._id) 
                            div.comment__menu_box
                                ul 
                                    li.comment_edit
                                        span.fas.fa-pen.comment__edit_btn
                                        span.comment__btn_text 수정
                                    li.comment__delete
                                        span.fas.fa-trash.comment__delete_btn
                                        span.comment__btn_text 삭제
                        div
                            pre.comment__text
                                | #{`${comment.text}`}
                        div.comment__icons
                            span.likes
                                //- if loggedInUser.likes
                                    each like in loggedInUser.likes
                                        if String(like) === String(comment._id)
                                            span.fas.fa-thumbs-up
                                                | &nbsp;
                                        else 
                                            span.far.fa-thumbs-up
                                                | &nbsp;
                                //- else 
                                span.far.fa-thumbs-up
                                span=comment.meta.likes
                            if String(video.owner._id) === String(loggedInUser._id)
                                span.far.fa-heart.comment__heart
                                //- span.fas.fa-heart.comment__heart

block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")
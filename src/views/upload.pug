extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(type="text", name="title", placeholder="Title", required)
        input(type="text", name="description", placeholder="Description", required)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(value="Upload Video", type="submit")